//- operation
.grid-operation
  .btn-group.grid-buttons
    a.btn.btn-default.btn-sm(ng-if="vm.operation.add" href="{{vm.api.addHref}}") <i class="fa fa-plus"></i> 添加
    //- button.btn.btn-danger.btn-sm(ng-if="vm.operation.delete" ng-disabled="!vm.selectedItems.length" type="button" ng-click="vm.delete()")  <i class="fa fa-trash"></i> 删除
    
  .btn-group.grid-buttons
    button(class="btn btn-sm btn-{{item[0]}}" ng-disabled="!vm.selectedItems.length" type="button" ng-click="vm[item[1]]()" ng-repeat="item in vm.btns") {{item[2]}}

  .form-inline.grid-search(ng-if="vm.operation.search")
    .form-group
      label.sr-only(for="search") 搜索
      input#search.form-control(ng-model="vm.query" type="text" placeholder="输入您要搜索的关键字" ng-keyup="vm.search(vm.query)")

//- tab
.grid-tabs(ng-if="vm.tabs")
  tabset(type="tags")
    tab(heading="{{tab.title}}" active="tab.active" disable="tab.disabled" ng-click="vm.switchTab(tab.query)" ng-repeat="tab in vm.tabs")

.grid-tabs(ng-if="vm.tabs2")
  tabset(type="pills")
    tab(heading="{{tab.title}}" active="tab.active" disable="tab.disabled" ng-click="vm.switchTab(tab.query)" ng-repeat="tab in vm.tabs2")

//- table
.grid-list
  table.table.table-hover
    thead
      tr
        th
          input(type="checkbox")
        th(ng-repeat="th in vm.ths") {{th}}
    tbody
      tr(ng-repeat="item in vm.htmlList")
        th
          input(type="checkbox" value="{{$index}}")
        td(ng-repeat="value in item track by $index" ng-bind-html="value")
  .grid-loading(ng-if="vm.isLoading")
    i.fa.fa-circle-o-notch.fa-spin
  .grid-nodata(ng-if="vm.isNoData") 暂无数据
  .grid-error(ng-if="vm.isError") 请求出现错误，
    a(href="javascript:;" ng-click="vm.reload()") 重试

//- pagination
.grid-pagination
  pagination(
    total-items="vm.totalItems"
    items-per-page="10"
    ng-model="vm.currentPage"
    max-size="5"
    rotate="false"
    previous-text="前页"
    next-text="后页"
    ng-change="vm.pageChanged()"
  )
